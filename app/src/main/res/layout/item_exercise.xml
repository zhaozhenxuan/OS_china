<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="7dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/aaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_label_originate" />

    <ImageView
        android:id="@+id/bbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/aaa"
        android:src="@mipmap/ic_label_recommend" />

    <TextView
        android:id="@+id/tv_exercise_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/bbb"
        android:text="TextView"
        android:textColor="#000"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_exercise_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aaa"
        android:layout_alignStart="@+id/aaa"
        android:layout_below="@+id/tv_exercise_a"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:text="TextView"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_exercise_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_exercise_b"
        android:layout_alignStart="@+id/tv_exercise_b"
        android:layout_below="@+id/tv_exercise_b"
        android:layout_marginTop="10dp"
        android:text="TextView" />



    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_exercise_c"
        android:layout_toRightOf="@+id/tv_exercise_c"
        android:layout_toEndOf="@+id/tv_exercise_c"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/exe_time" />

    <ImageView
        android:id="@+id/aaaaaa"
        android:layout_marginTop="3dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_exercise_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"/>

    <TextView
        android:id="@+id/exe_number"
        android:text="1"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/aaaaaa"/>

</RelativeLayout>
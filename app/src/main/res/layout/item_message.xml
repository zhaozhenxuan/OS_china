<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="7dp"
    android:paddingBottom="20dp">


    <ImageView
        android:src="@mipmap/ic_label_today"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:id="@+id/aaa"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/aaa"
        android:textSize="17dp"
        android:textColor="#000"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:id="@+id/tv_message_a" />

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:maxLines="2"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message_b"
        android:layout_below="@+id/tv_message_a"
        android:layout_alignLeft="@+id/aaa"
        android:layout_alignStart="@+id/aaa" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message_c"
        android:layout_below="@+id/tv_message_b"
        android:layout_alignLeft="@+id/tv_message_b"
        android:layout_alignStart="@+id/tv_message_b"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_message_c"
        android:layout_toRightOf="@+id/tv_message_c"
        android:layout_toEndOf="@+id/tv_message_c"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/message_time" />

    <ImageView
        android:layout_marginTop="3dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_message_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"/>

    <TextView
        android:id="@+id/message_number"
        android:text="1"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_message_c"/>


</RelativeLayout>
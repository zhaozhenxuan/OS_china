<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:background="#24CF5F"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/my_setting"
            android:src="@drawable/btn_my_setting"/>

        <ImageView
            android:id="@+id/btn_qrcode"
            android:layout_margin="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_qrcode"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/image_login"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_qrcode"
            android:src="@drawable/new_moon_with_face"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/image_login"
            android:textColor="#fff"
            android:text="点击头像登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <!-- 码云推荐 -->
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="#fff"
            android:orientation="horizontal"
            android:id="@+id/WDXX"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/WDXX_image"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_message"
                />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/WDXX_image"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的消息"/>

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wei"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="56dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E5E6"></LinearLayout>

        <!-- 码云推荐 -->
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="#fff"
            android:orientation="horizontal"
            android:id="@+id/WDBK"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/WDBK_image"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_blog"
                />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/WDBK_image"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的博客"/>

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wei"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="56dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E5E6"></LinearLayout>

        <!-- 码云推荐 -->
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="#fff"
            android:orientation="horizontal"
            android:id="@+id/WDWD"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/WDWD_image"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_question"
                />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/WDWD_image"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的问答"/>

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wei"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="56dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E5E6"></LinearLayout>

        <!-- 码云推荐 -->
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="#fff"
            android:orientation="horizontal"
            android:id="@+id/WDHD"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/WDHD_image"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_event"
                />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/WDHD_image"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的活动"/>

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wei"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="56dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E3E5E6"></LinearLayout>

        <!-- 码云推荐 -->
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="#fff"
            android:orientation="horizontal"
            android:id="@+id/WDTD"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/WDTD_image"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_team"
                />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/WDTD_image"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的团队"/>

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wei"/>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的团队"/>

            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wei"/>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
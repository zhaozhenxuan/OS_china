<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/www"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#24CF5F">

        <ImageView
            android:layout_marginTop="4dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/img_btn_DT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"/>

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/DT_xiangqing_tv"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_toRightOf="@id/img_btn_DT"
            android:layout_marginLeft="34dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动弹详情"/>

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/bt_share_white"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <ImageView
        android:layout_below="@id/www"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/DT_image" />

    <TextView
        android:textSize="20dp"
        android:textColor="#000"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DT_image"
        android:layout_toRightOf="@+id/DT_image"
        android:layout_toEndOf="@+id/DT_image"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/DT_tv_a" />

    <TextView
        android:textSize="15dp"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/DT_tv_b"
        android:layout_below="@+id/DT_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

</RelativeLayout>
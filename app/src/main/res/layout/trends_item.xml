<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:background="#24CF5F">

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tv_toobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="动弹"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/search_btn"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_search_normal"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/treads_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:tabIndicatorColor="#24CF5F"
        app:tabSelectedTextColor="#24CF5F"
        app:tabTextColor="#BBBBBB"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/trends_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
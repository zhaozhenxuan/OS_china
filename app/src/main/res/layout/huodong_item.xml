<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="90dp"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:id="@+id/huodong_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/huodong_img"
        android:layout_alignLeft="@+id/huodong_tv"
        android:layout_alignStart="@+id/huodong_tv"
        android:id="@+id/huodong_time_tv" />

    <TextView
        android:textColor="#000"
        android:maxLines="2"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/huodong_tv"
        android:layout_alignTop="@+id/huodong_img"
        android:layout_toRightOf="@+id/huodong_img"
        android:layout_toEndOf="@+id/huodong_img"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />
</RelativeLayout>
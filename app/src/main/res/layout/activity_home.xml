<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.os_china.activity.HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cbd1d4"/>

    <FrameLayout
        android:id="@+id/contentGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </FrameLayout>

    <RadioGroup
        android:layout_marginTop="5dp"
        android:id="@+id/Bottom_Group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <RadioButton
            android:textColor="@drawable/text"
            android:drawableTop="@drawable/synthesize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="综合"
            android:checked="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/ZongHeBtn"
            />
        <RadioButton
            android:textColor="@drawable/text"
            android:drawableTop="@drawable/trends"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="动弹"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/DongTanBtn"
            />
        <ImageView
            android:layout_marginBottom="5dp"
            android:src="@drawable/add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/AddBtn"
            />

        <RadioButton
            android:textColor="@drawable/text"
            android:drawableTop="@drawable/find"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="发现"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/FaXianBtn"
            />
        <RadioButton
            android:textColor="@drawable/text"
            android:drawableTop="@drawable/mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="我的"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/MineBtn"
            />
    </RadioGroup>
</LinearLayout>
